<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CalcApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white_0</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/white_0</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_background_light</item>
        <item name="android:windowBackground">@color/main_background_light</item>
        <item name="android:navigationBarColor">@color/main_background_light</item>
    </style>

    <style name="Theme.CalcApp.Button.Number" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_background_light</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">25sp</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Theme.CalcApp.Button.Action.Green" parent="Theme.CalcApp.Button.Number">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Theme.CalcApp.Button.Action.Red" parent="Theme.CalcApp.Button.Number">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.CalcApp.TextView.Big" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="Theme.CalcApp.TextView.Small" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>